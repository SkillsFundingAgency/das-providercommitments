@using SFA.DAS.ProviderUrlHelper
@inject ILinkGenerator LinkGenerator;
@model SFA.DAS.ProviderCommitments.Web.Models.Cohort.FileDiscardSuccessViewModel

@{
    ViewBag.Title = "File Discard Success";
    ViewBag.GaData.Vpv = "/bulk-upload/success-discard-file";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="govuk-panel govuk-panel--confirmation">
            <h1 class="govuk-panel__title">
                File upload cancelled
            </h1>
        </div>

        <p class="govuk-body">No new cohorts or apprentices have been uploaded into the service.</p>

        <h2 class="govuk-heading-m">What happens next</h2>

        <ul class="govuk-list">
            <li><a href="@LinkGenerator.ProviderApprenticeshipServiceLink("account")" class="govuk-link">Go to homepage</a></li>
            <li><a href="@Url.Action("SelectDraftApprenticeshipsEntryMethod", new { @Model.ProviderId })" class="govuk-link">Add more apprentices</a></li>

        </ul>
    </div>
</div>
