@model SFA.DAS.ProviderCommitments.Web.Models.Cohort.SelectDeliveryModelViewModel

@{
    ViewBag.Title = "Select delivery model";
    ViewBag.GaData.Vpv = "/unapproved/cohort/apprentices/add/select-delivery-model";
    ViewBag.GaData.Org = @Model.EmployerName;
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <partial name="_ValidationSummary" />
        <h1 class="govuk-heading-xl">Select the apprenticeship delivery model</h1>

        <form id="selectDeliveryModel" novalidate method="post">
            <input type="hidden" asp-for="CourseCode" />
            <input type="hidden" asp-for="IsOnFlexiPaymentsPilot" />

            <partial name="_SelectDeliveryModelPartial" />

            <button type="submit" class="govuk-button">Continue</button>
        </form>
    </div>
</div>