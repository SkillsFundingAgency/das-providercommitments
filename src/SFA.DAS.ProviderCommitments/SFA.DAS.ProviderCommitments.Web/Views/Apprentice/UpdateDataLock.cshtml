@using SFA.DAS.ProviderCommitments.Web.Extensions
@using SFA.DAS.CommitmentsV2.Shared.Extensions
@model SFA.DAS.ProviderCommitments.Web.Models.Apprentice.UpdateDateLockViewModel

@{
    ViewBag.Title = "Apprenticeship data mismatch";
    ViewBag.PageID = "datalock-details-change";
    ViewBag.ZenDeskLabel = "matp-ILR data mismatch";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <partial name="_ValidationSummary" />

        <h1 class="govuk-heading-xl">Details of ILR data mismatch</h1>
        <table class="govuk-table">
            <tr>
                <td class="first-child">Name</td>
                <td class="first-child">@Model.FirstName @Model.LastName</td>
            </tr>
            <tr>
                <td>Unique learner number</td>
                <td>@Model.ULN</td>
            </tr>
            <tr>
                <td>Date of birth</td>
                <td>
                    @if (Model.DateOfBirth.HasValue)
                    {
                        @Model.DateOfBirth.Value.ToGdsFormat()
                    }
                </td>
            </tr>
        </table>

        @{ var count = 0; }

        @foreach (var dl in Model.CourseDataLocks)
        {
            count++;

            var ilrPricePeriod = dl.IlrEffectiveToDate.HasValue
                ? $"{dl.IlrEffectiveFromDate.Value.ToGdsFormat()} to {dl.IlrEffectiveToDate.Value.ToGdsFormat()}"
                : $"{dl.IlrEffectiveFromDate.Value.ToGdsFormat()} onwards";

            var dasPricePeriod = dl.ToDate.HasValue
                ? $"{dl.FromDate.ToGdsFormat()} to {dl.ToDate.Value.ToGdsFormat()}"
                : $"{dl.FromDate.ToGdsFormat()} onwards";

            if (Model.TotalChanges > 1)
            {
                <h2 class="heading-small">Mismatch @count </h2>
            }
            <div class="grid-row">
                <div class="column-one-half"  >

                    <table class="govuk-table">
                        @*SORT OUT THE STYLE*@
                        <caption class="heading-small">Apprenticeship service</caption>
                        <thead>
                            <tr>
                                <th scope="col" class="first-child govuk-table__header">Period</th>
                                <th class="numeric first-child govuk-table__header" scope="col">Apprenticeship <br />training course</th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td scope="row"  class="govuk-table__cell">From<br /> @dasPricePeriod</td>
                                <td class="numeric govuk-table__cell">@dl.TrainingName</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="column-one-half">
                    <table class="govuk-table">
                        @*SORT OUT THE STYLE*@
                        <caption class="heading-small">ILR submission</caption>
                        <thead>
                            <tr>
                                <th scope="col" class="first-child ">Period</th>
                                <th class="numeric first-child govuk-table__header" scope="col">Apprenticeship <br />training course</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td scope="row"  class="govuk-table__cell">From<br /> @ilrPricePeriod</td>
                                <td class="numeric govuk-table__cell">@dl.IlrTrainingName</td>
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>
        }

        @foreach (var dl in Model.PriceDataLocks)
        {
            count++;

            var ilrPricePeriod = dl.IlrEffectiveToDate.HasValue
                ? $"{dl.IlrEffectiveFromDate.Value.ToGdsFormat()} to {dl.IlrEffectiveToDate.Value.ToGdsFormat()}"
                : $"{dl.IlrEffectiveFromDate.Value.ToGdsFormat()} onwards";

            var dasPricePeriod = dl.ToDate.HasValue
                ? $"{dl.FromDate.ToGdsFormat()} to {dl.ToDate.Value.ToGdsFormat()}"
                : $"{dl.FromDate.ToGdsFormat()} onwards";

            if (Model.TotalChanges > 1)
            {
                <h2 class="heading-small">Mismatch @count </h2>
            }
            <div class="govuk-grid-row">
                <div class="govuk-column-one-half">

                    <table  class="govuk-table">     @*SORT OUT THE STYLE*@
                        <caption class="heading-small">Apprenticeship service</caption>
                        <thead>
                            <tr>
                                <th scope="col" class="govuk-table__header">Price period</th>
                                <th class="numeric first-child govuk-table__header" scope="col">Total apprenticeship <br />training price</th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td scope="row" class="govuk-table__cell">From<br /> @dasPricePeriod</td>
                                <td class="numeric govuk-table__cell">@dl.Cost.FormatCost()</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="govuk-column-one-half">        @*SORT OUT THE STYLE*@
                    <table class="govuk-table">
                        <caption class="heading-small">ILR submission</caption>
                        <thead>
                            <tr>
                                <th scope="col" class="govuk-table__header">Price period</th>
                                <th class="numeric first-child" scope="col" class="govuk-table__header">Total apprenticeship <br />training price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td scope="row" class="govuk-table__cell">From<br />@ilrPricePeriod</td>
                                <td class="numeric govuk-table__cell">@dl.IlrTotalCost.FormatCost()</td>
                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>
        }

        <form method="post">
            <fieldset class="govuk-fieldset">
                @Html.AntiForgeryToken()

                <div class="govuk-form-group  @Html.AddClassIfPropertyInError(x => x.SubmitStatusViewModel, "govuk-form-group--error")">
                    <fieldset class="govuk-fieldset">
                        <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                            How do you want to fix the mismatch?
                        </legend>
                        @Html.ValidationMessageFor(m => m.SubmitStatusViewModel, null, new { @class = "govuk-error-message", id = "error-message-" + Html.IdFor(m => m.SubmitStatusViewModel) })
                        <div class="govuk-radios">
                            <div class="govuk-radios__item">
                                <input asp-for="SubmitStatusViewModel" value="Confirm" type="radio" class="govuk-radios__input" id="SubmitStatusViewModel-Confirm" />
                                <label class="govuk-label govuk-radios__label" for="SubmitStatusViewModel-Confirm">
                                    Request these details are updated to match the ILR
                                </label>

                            </div>

                            <div class="govuk-radios__item">
                                <input asp-for="SubmitStatusViewModel" value="None" type="radio" class="govuk-radios__input" id="SubmitStatusViewModel-None" />
                                <label class="govuk-label govuk-radios__label" for="SubmitStatusViewModel-None">
                                    Leave for now
                                </label>
                            </div>
                        </div>
                    </fieldset>
                </div>

                <button id="fix-mismatch" class="govuk-button" type="submit" data-module="govuk-button">
                    Continue
                </button>
            </fieldset>
        </form>

