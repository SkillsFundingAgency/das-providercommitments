@using SFA.DAS.ProviderCommitments.Web.RouteValues
@model SFA.DAS.ProviderCommitments.Web.Models.Apprentice.SelectDeliveryModelViewModel

@{
    ViewBag.Title = "Select Delivery Model";
    ViewBag.GaData.Vpv = "/apprentices/apprentice/change-employer/select-delivery-model";
    ViewBag.GaData.Org = Model.LegalEntityName;
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <partial name="_ValidationSummary" />
        <h1 class="govuk-heading-xl">Select the apprenticeship delivery model</h1>

        <form id="selectDeliveryModel" novalidate method="post">
            <input type="hidden" asp-for="CacheKey"/>
            <input type="hidden" asp-for="IsEdit"/>
            <input type="hidden" asp-for="ProviderId"/>

            <partial name="_SelectDeliveryModelPartial"/>

            <button type="submit" class="govuk-button">Continue</button>
        </form>
    </div>
</div>

@section breadcrumb
{
    @{
        var backRoute = Model.IsEdit ? RouteNames.ApprenticeConfirm : RouteNames.ApprenticeConfirmEmployer;
        var backModel = new
        {
            Model.CacheKey,
            Model.ProviderId,
            Model.ApprenticeshipHashedId
        };
    }

    <a id="back-link" class="govuk-back-link" href="@Url.RouteUrl(backRoute, backModel)">Back</a>
}
