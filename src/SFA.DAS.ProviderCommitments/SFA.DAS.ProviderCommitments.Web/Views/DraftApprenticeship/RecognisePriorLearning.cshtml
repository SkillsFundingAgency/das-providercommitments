@model SFA.DAS.ProviderCommitments.Web.Models.RecognisePriorLearningViewModel
@using SFA.DAS.CommitmentsV2.Shared.Extensions

@{
    ViewData["Title"] = "Recognition of prior learning (RPL)";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <partial name="_ValidationSummary" />

        <form method="post">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.ProviderId)
            @Html.HiddenFor(x => x.CohortReference)
            @Html.HiddenFor(x => x.DraftApprenticeshipId)
            
            

            <div class="govuk-form-group @(ViewContext.ModelState.IsValid ? "" : "govuk-form-group--error")">
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                        <h1 class="govuk-fieldset__heading">
                            Recognition of prior learning (RPL)
                        </h1>
                    </legend>
                    @if (Model.RplCourseResponse.HasCourses)
                    {
                        <div id="changed-name-hint" class="govuk-hint">
                        Do you consider these qualifications would constitute prior learning for this apprenticeship - @Model.CourseName?
                        </div>

                        <table>
                            <tr>
                                <td>
                                    <ul>
                                        @foreach (var qual in Model.RplCourseResponse.Courses)
                                        {
                                            <li>@qual</li>
                                        }
                                    </ul>
                                </td>
                                <td>
                                    <div class="govuk-radios">
                                        <div class="govuk-radios__item">
                                            <input class="govuk-radios__input" id="WouldConstitutePriorLearning-yes" asp-for="@Model.RplQualRating" type="radio" value="3">
                                            <label class="govuk-label govuk-radios__label" for="WouldConstitutePriorLearning-yes">
                                                All do
                                            </label>
                                        </div>
                                        <div class="govuk-radios__item">
                                            <input class="govuk-radios__input" id="WouldConstitutePriorLearning-yes" asp-for="@Model.RplQualRating" type="radio" value="2">
                                            <label class="govuk-label govuk-radios__label" for="WouldConstitutePriorLearning-yes">
                                                Some
                                            </label>
                                        </div>
                                        <div class="govuk-radios__item">
                                            <input class="govuk-radios__input" id="WouldConstitutePriorLearning-no" asp-for="@Model.RplQualRating" type="radio" value="1">
                                            <label class="govuk-label govuk-radios__label" for="WouldConstitutePriorLearning-no">
                                                None
                                            </label>
                                        </div>
                                    </div>
                                </td>
                            </tr>

                        </table>
                    }

                    

                    <div id="changed-name-hint" class="govuk-hint">
                        Is there any recognised prior learning for this apprenticeship?
                    </div>
                    @Html.ValidationMessageFor(m => m.IsTherePriorLearning, null, new { @class = "govuk-error-message", id = "error-message-" + Html.IdFor(m => m.IsTherePriorLearning) })
                    <div class="govuk-radios">
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="IsTherePriorLearning-yes" asp-for="@Model.IsTherePriorLearning" type="radio" value="true">
                            <label class="govuk-label govuk-radios__label" for="IsTherePriorLearning-yes">
                                Yes
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="IsTherePriorLearning-no" asp-for="@Model.IsTherePriorLearning" type="radio" value="false">
                            <label class="govuk-label govuk-radios__label" for="IsTherePriorLearning-no">
                                No
                            </label>
                        </div>
                    </div>
                </fieldset>
            </div>

            <button class="govuk-button" type="submit">
                Save and continue
            </button>
        </form>
    </div>
</div>

@section breadcrumb
{
<a id="back-link" class="govuk-back-link" href="@Url.Action("ViewEditDraftApprenticeship", "DraftApprenticeship", @Model)">Back</a>
}
