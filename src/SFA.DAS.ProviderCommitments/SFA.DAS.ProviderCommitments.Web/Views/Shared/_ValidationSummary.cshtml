@model Microsoft.AspNetCore.Mvc.ModelBinding.ModelStateDictionary

@if (!Model.IsValid)
{
    <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="error-summary">
        <h2 class="govuk-error-summary__title" id="error-summary-title">
            There is a problem
        </h2>
        <div class="govuk-error-summary__body">
            <ul class="govuk-list govuk-error-summary__list">
                
                @foreach (var stateItem in Model)
                {
                    var elementId = ViewData.TemplateInfo.GetFullHtmlFieldName(stateItem.Key) ?? stateItem.Key;

                    foreach (var error in stateItem.Value.Errors)
                    {
                        <li>
                            <a href="#error-message-@elementId" data-focuses="error-message-@elementId">
                                @error.ErrorMessage
                            </a>
                        </li>
                    }
                }

            </ul>
        </div>
    </div>
}
